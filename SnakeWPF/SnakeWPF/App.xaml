<Application x:Class="SnakeWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SnakeWPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundColor">#DCE2AA</SolidColorBrush>
        <SolidColorBrush x:Key="GridBackgroundColor">#4B543B</SolidColorBrush>
        <SolidColorBrush x:Key="GridLineColor">#B57F50</SolidColorBrush>
        <SolidColorBrush x:Key ="TextColor">#4B543B</SolidColorBrush>
        <SolidColorBrush x:Key="OverlayColor">#B57F50 </SolidColorBrush>
        <FontFamily x:Key="MainFont:">Assets/#Droid Sans Mono</FontFamily>
    </Application.Resources>
</Application>
