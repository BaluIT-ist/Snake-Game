<Application x:Class="SnakeWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SnakeWPF"
             StartupUri="StartWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundColor">#96C5B0</SolidColorBrush>
        <SolidColorBrush x:Key="GridBackgroundColor">#13C4A3</SolidColorBrush>
        <SolidColorBrush x:Key="GridLineColor">black</SolidColorBrush>
        <SolidColorBrush x:Key ="TextColor">#4B543B</SolidColorBrush>
        <SolidColorBrush x:Key="OverlayColor">LightBlue </SolidColorBrush>
        <FontFamily x:Key="MainFont:">Assets/#Droid Sans Mono</FontFamily>
    </Application.Resources>
</Application>
